	// Split?
	
	// find OP
	
	
	public void convertInstructionToBinary(){
		// We have instruction
		int opCode = 23;
		String opCodeS = Integer.toBinaryString(opCode);
		int missingdigits = 5 - opCodeS.length();
		
		
		String a = "";
		// We now add x amounts of 0 digits.
		for(;missingdigits>0;missingdigits--){
			a += "0";
		}
		a += opCodeS;
		
		System.out.println( a);
		
		
	}
	
}
